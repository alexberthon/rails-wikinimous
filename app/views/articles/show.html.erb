<div class="d-flex align-items-center">
  <h1><%= @article.title %></h1>
  <%= link_to edit_article_path(@article), class: "ms-3 fs-4" do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>
  <%= link_to article_path(@article), class: "ms-3 fs-4", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
</div>

<hr>

<p>
  <%= @article.content %>
</p>
